{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "FactsGatheredV1",
  "properties": {
    "execution_id": {
      "type": "string",
      "format": "uuid"
    },
    "agent_id": {
      "type": "string",
      "format": "uuid"
    },
    "facts_gathered": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "check_id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "value": {
            "type": ["number", "string", "boolean"]
          },
          "error": {
            "type": "object",
            "properties": {
              "message": {
                "type": "string"
              },
              "type": {
                "type": "string"
              }
            },
            "required": ["message", "type"]
          }
        },
        "required": ["check_id", "name", "value"]
      }
    }
  },
  "required": ["execution_id", "agent_id", "facts_gathered"]
}

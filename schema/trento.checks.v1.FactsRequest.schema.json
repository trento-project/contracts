{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "FactsRequestV1",
  "properties": {
    "execution_id": {
      "type": "string",
      "format": "uuid"
    },
    "facts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "check_id": {
            "type": "string",
            "minLength": 1
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "gatherer": {
            "type": "string",
            "minLength": 1
          },
          "argument": {
            "type": "string",
            "minLength": 1
          }
        },
        "required": ["check_id", "name", "gatherer"]
      }
    }
  },
  "required": ["execution_id", "facts"]
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "FactsGatheredV1",
  "properties": {
    "execution_id": {
      "type": "string",
      "format": "uuid"
    },
    "agent_id": {
      "type": "string",
      "format": "uuid"
    },
    "facts_gathered": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "check_id": {
            "type": "string",
            "minLength": 1
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "value": {
            "oneOf": [
              {
                "type": "object",
                "title": "FactGatheredError",
                "properties": {
                  "message": {
                    "type": "string",
                    "minLength": 1
                  },
                  "type": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "required": ["message", "type"]
              },
              {
                "type": "string"
              },
              {
                "type": "number"
              },
              {
                "type": "boolean"
              }
            ]
          }
        },
        "required": ["check_id", "name", "value"]
      }
    }
  },
  "required": ["execution_id", "agent_id", "facts_gathered"]
}
